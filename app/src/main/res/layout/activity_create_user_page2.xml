<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="benmatt.myuniversitytutor.CreateUserPage2">

    <TextView
        android:id="@+id/majorText"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:text="Major: "
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/majorField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignBaseline="@+id/majorText"
        android:layout_alignBottom="@+id/majorText"
        android:layout_toRightOf="@+id/majorText"
        android:layout_toEndOf="@+id/majorText" />

    <TextView
        android:id="@+id/minorText"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:text="Minor:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_below="@+id/majorText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/minorField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minorText"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/minorText"
        android:layout_toRightOf="@+id/minorText"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/universityText"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/minorText"
        android:layout_marginTop="34dp"
        android:text="University"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/universityField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/universityText"
        android:layout_alignEnd="@+id/minorField"
        android:layout_alignRight="@+id/minorField"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="Submit" />

</RelativeLayout>
